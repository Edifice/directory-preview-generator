drawer-width = 360px

.mdl-layout__drawer
    width drawer-width
    .mdl-navigation
        padding-top 0
        ul
            margin-top 0

.mdl-layout--fixed-drawer
    &.is-upgraded:not(.is-small-screen)>.mdl-layout__header
        margin-left drawer-width
        width "calc(100% - %s)" % drawer-width
    &>.mdl-layout__content
        margin-left drawer-width
    .mdl-list__item
        padding 0 16px 0 0
        min-height 30px
        h2
            font-size 1.8em
        .mdl-list__item-primary-content
            outline none
            cursor pointer

.page-content
    display flex
    flex-wrap wrap
    padding 20px

.mdl-card
    width 300px
    margin-right 20px
    margin-bottom @margin-right

.mdl-card__media
    height 300px
    width @height
    background-size contain
    background-repeat no-repeat
    background-color white

.mdl-card__supporting-text
    padding-bottom 2px

.mdl-badge
    background #3F51B5
    padding 5px 12px
    border-radius 4px
    color white
    background #3f51b5
    float left
    margin-bottom 12px
    margin-right @margin-bottom
    &[data-badge]:after
        top -10px
        right -8px
        font-size 10px
        width auto
        height 18px
        padding 0 6px
        border-radius 10px

.add-button
    position absolute
    right 20px
    bottom @right
    z-index 1000

dialog
    width 90% !important
    max-width 600px
